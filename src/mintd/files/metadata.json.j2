{
  "schema_version": "1.0",
  "mint": {
    "version": "{{ mint_version }}",
    "commit_hash": "{{ mint_hash }}"
  },
  "project": {
    "name": "{{ project_name }}",
    "type": "{{ project_type }}",
    "full_name": "{{ full_project_name }}",
    "display_name": "{{ project_name | replace('_', ' ') | replace('-', ' ') | title }}",
    "created_at": "{{ created_at }}",
    "created_by": "{{ author }}"
  },
  "metadata": {
    "version": "1.0.0",
    "mint_version": "{{ mint_version }}"
  },
  "ownership": {
    "team": "{{ team }}",
    "maintainers": [
      "{{ author }}"
    ]
  },
  "access_control": {
    "teams": [
      {
        "name": "{{ admin_team }}",
        "permission": "admin"
      },
      {
        "name": "{{ researcher_team }}",
        "permission": "read"
      }
    ]
  },
  "status": {
    "state": "active",
    "last_updated": "{{ created_at }}"
  },
  "governance": {
    "classification": "{{ classification }}",
    "contract_info": "{{ contract_info | default('') }}"
  },
  "storage": {
    "provider": "{{ storage_provider | default('s3') }}",
    "bucket": "{{ bucket_name | default('') }}",
    "prefix": "{{ storage_prefix }}",
    "endpoint": "{{ storage_endpoint | default('') }}",
    "versioning": {{ storage_versioning | default(true) | lower }},
    "dvc": {
      "remote_name": "{{ dvc_remote_name | default('') }}",
      "remote_url": "{{ dvc_remote_url | default('') }}"
    }
  },
  "schema": {
    "version": "1.0.0",
    "location": "schemas/v1/schema.json"
  },
  "lifecycle": {
    "retention_policy": "permanent",
    "archival_status": "active"
  },
  "repository": {
    "github_url": "https://github.com/{{ registry_org }}/{{ full_project_name }}",
    "default_branch": "main",
    "visibility": "private",
    "mirror": {
      "url": "{{ mirror_url | default('') }}",
      "purpose": "{{ mirror_purpose | default('external_collaboration') }}"
    }
  }
}